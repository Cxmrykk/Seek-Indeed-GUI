{
  "name": "jobs-gui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"bun run dev:vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc -b && vite build && electron-builder",
    "dev:vite": "vite",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^6.1.7",
    "@mui/x-data-grid": "^7.22.2",
    "concurrently": "^8.2.2",
    "date-fns": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "selenium-webdriver": "^4.26.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "electron": "31",
    "electron-builder": "^25.1.8",
    "electron-chromedriver": "^31.7.4",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.cxmrykk.seek-indeed-gui",
    "productName": "Job Search",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      "node_modules/electron-chromedriver"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
